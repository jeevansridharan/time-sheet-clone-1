generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Use SQLite for local development by default. To use MySQL, set
  // `DATABASE_URL` in your environment and change provider to "mysql".
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  role      String?  @default("user")
  createdAt DateTime @default(now())
  entries   Entry[]
  projects  Project[]
}

model Entry {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  title      String
  project    String?
  start      DateTime
  end        DateTime?
  description String?
  billable   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Project {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  name       String
  description String?
  deadline   DateTime?
  hourlyRate Float?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
